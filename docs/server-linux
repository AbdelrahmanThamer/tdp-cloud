#!/bin/sh
#

set -e
set -o noglob

# --- global env ---

if [ ! $TDP_PACKAGE ]; then
    TDP_PACKAGE=http://tdp.icu/build/tdp-cloud-linux-amd64.gz
fi

if [ ! $TDP_BIN_FILE ]; then
    TDP_BIN_FILE=/usr/local/bin/tdp-cloud
fi

if [ ! $TDP_BIN_ARGS ]; then
    TDP_BIN_ARGS="--listen :7800 --dsn /var/lib/tdp-cloud/server.db"
fi

# --- download binary ---

if type curl >/dev/null 2>&1; then
    curl -sfL $TDP_PACKAGE | gunzip > $TDP_BIN_FILE
else if type wget >/dev/null 2>&1; then
    wget -qO- $TDP_PACKAGE | gunzip > $TDP_BIN_FILE
fi

if [ ! -e $TDP_BIN_FILE ]; then
    fatal "[ERROR] Can't download ${TDP_PACKAGE}"
    exit 1
fi

# --- create service ---

chmod +x $TDP_BIN_FILE
mkdir -p /etc/tdp-cloud
mkdir -p /var/lib/tdp-cloud
mkdir -p /var/log/tdp-cloud

$TDP_BIN_FILE server -s install $TDP_BIN_ARGS
service tdp-server start

# --- create uninstall script ---

cat <<EOF >$TDP_BIN_FILE-uninstall
#!/bin/sh
service tdp-server stop
$TDP_BIN_FILE server -s uninstall
rm -rf /var/*/tdp-cloud*
rm -rf /etc/tdp-cloud*
rm -rf $TDP_BIN_FILE
EOF

chmod +x $TDP_BIN_FILE-uninstall
